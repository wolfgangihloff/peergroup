%table
  %tr
    %td.main
      %h2= @title
      - unless @users.empty?
        = render "users/list", :users => @users, :selected_user => nil
        = will_paginate @users
    %td.sidebar.round
      %strong= t(".captions.name", :default => "Name")
      = h @user.name
      %br/
      %strong= t(".captions.url", :default => "URL")
      = link_to user_path(@user), @user
      %br/
      = render 'pages/stats'
      - unless @users.empty?
        - @users.each do |user|
          = link_to gravatar_for(user, :size => 30), user
